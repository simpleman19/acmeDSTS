<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="my-pu">
   		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>acme.pd.Company</class>
    	<properties>
    		<property name="dialect">com.enigmabridge.hibernate.dialect.SQLiteDialect</property>
	    	<property name="javax.persistence.jdbc.driver">org.sqlite.JDBC</property>
		    <property name="javax.persistence.jdbc.url">jdbc:sqlite:database/acmeDSTS.db</property>
		    <property name="javax.persistence.jdbc.user"></property>
		    <property name="javax.persistence.jdbc.password"></property>
		    <property name="show_sql">true</property>
		    <!-- Scan for annotated classes and Hibernate mapping XML files -->
		    <!-- <property name="hibernate.archive.autodetection" value="class, hbm"/> -->
		    <property name="hibernate.hbm2ddl.auto">update</property>
    	</properties>
    </persistence-unit>
</persistence>

